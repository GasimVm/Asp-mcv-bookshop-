@model BookRead.Models.ViewModels.HomeIndexVM

@foreach (var item in Model.Book)
{
  <div class="col-md-6">
    <div class="post post-thumb">
        <a class="post-img" href="/Home/Details?Id=@item.Id"><img src="~/Uploads/@item.Image" style="height:333px" alt=""></a>
        <div class="post-body ">
            <div class="post-meta">
                @foreach (var category in item.CategoryBooks)
                {
                    <a class="post-category cat-2" href="#">@category.Category.Name</a>

                }

                <span class="post-date"> @item.Date.ToShortDateString()</span>
            </div>
            <h3 class="post-title"><a href="#">  @item.Name  </a></h3>
        </div>
    </div>
</div>
}